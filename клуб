time = {
    "Динамо": [20, 15, 3, 2, 48],
    "Шахтар": [20, 14, 4, 2, 46],
    "Зоря": [20, 10, 5, 5, 35],
    "Дніпро-1": [20, 11, 2, 7, 35]
}

print("Статистика спортивних клубів:")

for team, stats in time.items():
    print(f"Команда: {team}")
    print(f"  Всього ігор: {stats[0]}")
    print(f"  Перемог: {stats[1]}")
    print(f"  Нічиїх: {stats[2]}")
    print(f"  Поразок: {stats[3]}")
    print(f"  Всього очок: {stats[4]}")
    print("-" * 20)
